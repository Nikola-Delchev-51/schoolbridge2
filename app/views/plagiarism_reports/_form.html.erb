<%= form_with(model: plagiarism_report, class: "contents") do |form| %>
  <% if plagiarism_report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(plagiarism_report.errors.count, "error") %> prohibited this plagiarism_report from being saved:</h2>

      <ul class="list-disc ml-6">
        <% plagiarism_report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :assignment_submission_id %>
    <%= form.text_field :assignment_submission_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plagiarism_report.errors[:assignment_submission_id].none?, "border-red-400 focus:outline-red-600": plagiarism_report.errors[:assignment_submission_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :similarity_score %>
    <%= form.text_field :similarity_score, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plagiarism_report.errors[:similarity_score].none?, "border-red-400 focus:outline-red-600": plagiarism_report.errors[:similarity_score].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :sources_list %>
    <%= form.textarea :sources_list, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plagiarism_report.errors[:sources_list].none?, "border-red-400 focus:outline-red-600": plagiarism_report.errors[:sources_list].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :date_generated %>
    <%= form.date_field :date_generated, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": plagiarism_report.errors[:date_generated].none?, "border-red-400 focus:outline-red-600": plagiarism_report.errors[:date_generated].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
