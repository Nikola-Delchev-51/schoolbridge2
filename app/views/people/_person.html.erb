  <div>
    <strong class="block font-medium mb-1">Username:</strong>
    <%= person.username %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= person.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Forename:</strong>
    <%= person.forename %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Middle name:</strong>
    <%= person.middle_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Surname:</strong>
    <%= person.surname %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Type:</strong>
    <%= person.type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Date of birth:</strong>
    <%= person.date_of_birth %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address:</strong>
    <%= person.address_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Class cohort:</strong>
    <%= person.class_cohort_id %>
  </div>
  <div>
