    <%= person.enrollment_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Employment commencement date:</strong>
    <%= person.employment_commencement_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Salary:</strong>
