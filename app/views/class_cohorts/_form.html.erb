<%= form_with(model: class_cohort, class: "contents") do |form| %>
  <% if class_cohort.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(class_cohort.errors.count, "error") %> prohibited this class_cohort from being saved:</h2>

      <ul class="list-disc ml-6">
        <% class_cohort.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": class_cohort.errors[:name].none?, "border-red-400 focus:outline-red-600": class_cohort.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :class_teacher_id %>
    <%= form.text_field :class_teacher_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": class_cohort.errors[:class_teacher_id].none?, "border-red-400 focus:outline-red-600": class_cohort.errors[:class_teacher_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :grade_id %>
    <%= form.text_field :grade_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": class_cohort.errors[:grade_id].none?, "border-red-400 focus:outline-red-600": class_cohort.errors[:grade_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
