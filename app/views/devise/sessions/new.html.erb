<%= form_with(model: resource,
              as: resource_name,
              url: session_path(resource_name),
              local: true,
              class: "devise-form") do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail Address" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Remember me" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>

  <div class="additional-links">
    <%= link_to "Forgotten password?", new_password_path(resource_name) %>
  </div>
<% end %>
